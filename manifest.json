{
  "name": "__MSG_appName__",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "__MSG_appDescription__",
  "default_locale": "zh_CN",
  "permissions": [
    "storage"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/content.js"],
      "run_at": "document_start"
    }
  ]
}
